{
  "mcp_servers": {
    "git": {
      "command": "uvx",
      "args": ["mcp-server-git"],
      "description": "Version control operations, commits, and branch management",
      "repository": ""
    },
    "fetch": {
      "command": "uvx",
      "args": ["mcp-server-fetch"],
      "description": "API calls and external resource access",
      "repository": ""
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "File read/write operations for the current project directory",
      "repository": ""
    },
    "memory": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-memory"],
      "description": "Persistent memory across Claude Code sessions",
      "repository": ""
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "description": "GitHub API integration for repository management, issues, and pull requests",
      "repository": "https://github.com/github/github-mcp-server"
    },
    "inspector": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/inspector"],
      "description": "Debug MCP server connections (optional)",
      "repository": ""
    },
    "bayes-mcp": {
      "command": "python",
      "args": ["bayes_mcp.py"],
      "cwd": "mcp-servers/bayes-mcp",
      "description": "Bayesian statistical analysis and inference",
      "repository": ""
    },
    "jupyter-mcp": {
      "command": "python",
      "args": ["jupyter_mcp.py"],
      "cwd": "mcp-servers/jupyter-mcp",
      "description": "Jupyter notebook execution and management",
      "repository": "https://github.com/datalayer/jupyter-mcp-server"
    },
    "magic-mcp": {
      "command": "python",
      "args": ["magic_mcp.py"],
      "cwd": "mcp-servers/magic-mcp",
      "description": "Magic utilities and helper functions",
      "repository": "https://github.com/21st-dev/magic-mcp"
    },
    "crawl4ai-mcp": {
      "command": "python",
      "args": ["crawl4ai_mcp.py"],
      "cwd": "mcp-servers/crawl4ai-mcp",
      "description": "Web scraping and content extraction capabilities",
      "repository": "https://github.com/wyattowalsh/crawl4ai-mcp"
    },
    "calendar-mcp": {
      "command": "python",
      "args": ["calendar_mcp.py"],
      "cwd": "mcp-servers/calendar-mcp",
      "description": "Google Calendar integration for event management and scheduling",
      "repository": "https://github.com/Zawad99/Google-Calendar-MCP-Server"
    },
    "registry-mcp": {
      "command": "python",
      "args": ["registry_mcp.py"],
      "cwd": "mcp-servers/registry-mcp",
      "description": "MCP server registry management and discovery",
      "repository": "https://github.com/modelcontextprotocol/registry"
    }
  }
}
